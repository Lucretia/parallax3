with "sdlada";

project Parallax3 is
  Platform : SDLAda.Platform_Type := external ("SDL_PLATFORM", "linux");

  for Source_Dirs use ("source/");
  for Object_Dir  use "object/";
  for Exec_Dir    use "./";
  for Create_Missing_Dirs use "True";
  for Main use ("main.adb");

  package Builder is
     for Executable ("main.adb") use "parallax3";
  end Builder;

  package Compiler is
     for Default_Switches ("Ada") use
         (--"-gnatyyM99",
          "-gnatwa", "-gnatVa");
  end Compiler;

  package Linker is
    case Platform is
      when "linux" | "bsd" | "android" | "windows" =>
        for Default_Switches ("Ada") use ("-lSDL2",
                                          "-lSDL2_image");

      when "macosx" =>
        for Default_Switches ("Ada") use ("-F/Library/Frameworks",
                                          "-framework", "SDL2",
                                          "-framework", "SDL2_image");

      when "ios" =>
        null;
    end case;
  end Linker;

end Parallax3;
